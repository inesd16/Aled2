<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:theme="@style/AppTheme"
    tools:context=".HomeConnectedActivity">

    <TextView
        android:id="@+id/connectedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/welcomeConnected"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="#7FC7E4"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/historyButton"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="#8CB5D5"
            android:contentDescription="@string/history"
            android:orientation="horizontal"
            android:src="@drawable/news_logo"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="578dp" />

        <ImageButton
            android:id="@+id/sosButton"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/heartsosresized"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#8CB5D5"
            android:contentDescription="@string/goHomePage"
            android:orientation="horizontal"
            android:src="@drawable/house" />

    </LinearLayout>

    <TextView
        android:id="@+id/accessFormTextViewClickable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableEnd="@drawable/form_logo"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:text="@string/accessForm"
        android:textColor="#2D5677"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:drawableTint="#4F7B9E"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fellSickTextView"
        app:layout_constraintVertical_bias="0.184" />

    <TextView
        android:id="@+id/fellSickTextView"
        android:layout_width="290dp"
        android:layout_height="42dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="@string/feelSick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectedTitle" />

    <TextView
        android:id="@+id/sosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="@string/emergency"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explainText"
        app:layout_constraintVertical_bias="0.343" />

    <TextView
        android:id="@+id/explainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/explainText"
        app:layout_constraintTop_toBottomOf="@+id/accessFormTextViewClickable"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>